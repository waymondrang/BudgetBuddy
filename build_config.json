{
    "project_name_short": "bb",
    "enforce_version_control": true,
    "clean_manifest": false,
    "source": {
        "directory": "./src/chrome",
        "platform": "chrome"
    },
    "targets": [
        {
            "directory": "./src/firefox",
            "platform": "firefox",
            "manifest_version": 2,
            "patch": [
                "background.js",
                "index.js",
                "raw/raw.js"
            ]
        },
        {
            "directory": "./src/opera",
            "platform": "opera",
            "manifest_version": 2,
            "patch": [
                "background.js"
            ]
        }
    ],
    "git_messages": {
        "directory_sync": "automated directory sync"
    }
}